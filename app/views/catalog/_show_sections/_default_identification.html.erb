<div class='document-thumb-container'>
  <%= render_document_show_thumbnail document %>
</div>
<div>
  <h4><%= render_citation document %></h4>
  <% blacklight_config[:field_groups][:full_identification].each do |field_names| %>
    <div class="narrow column">
      <%= render :partial => "catalog/show_field_list", :locals => {:document => document, :field_names => field_names, :object => object } %>
    </div>
  <% end %>
  <div style="clear:left">
    <%= render :partial => "catalog/show_field_list", :locals => {:document => document, :field_names => ['originInfo_date_created_tesim', 'obj_label_ssim', 'identifier_tesim', 'tag_ssim'] } %>

    <%if defined?(object.status) %>
     <dl class="document-metadata dl-horizontal dl-invert">
      <dt>Status:</dt>
      <dd>
        <span class="<%= render_status_style(document, object) %>">
          <%= render_status(document, object) %>
        </span>
      </dd>
     </dl>
    <%end%>
    <%= render :partial => "catalog/show_field_list", :locals => {:document => document, :field_names => ['wf_error_ssim'] } %>

  </div>
</div>
