<script>
  $(function() {
    $( "#<%=facet_field.field%>_after_datepicker" ).datepicker();
    $( "#<%=facet_field.field%>_before_datepicker" ).datepicker();
  });
</script>
<div class='form-group'>
  <label for="<%=facet_field.field%>_after_datepicker">From:&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</label>
  <input maxlength="10" size="10" name="<%=facet_field.field%>_after_datepicker" id="<%=facet_field.field%>_after_datepicker" type="text">
</div>
<div class='form-group'>
  <label for="<%=facet_field.field%>_before_datepicker">Through:</label>
  <input maxlength="10" size="10" name="<%=facet_field.field%>_before_datepicker" id="<%=facet_field.field%>_before_datepicker" type="text">
</div>
<button id="<%=facet_field.field%>" onclick="assembleQuery(this);" class='btn btn-primary'>
  Apply
</button>
