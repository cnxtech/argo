<ul>
  <%buttons.each do |button|%>
    <%if button[:new_page]%>
      <li><%= link_to button[:label], button[:url], class: 'btn button btn-primary', data: { ajax_modal: 'trigger' }  %></li>
    <%else%>
      <%if button[:confirm]%>
        <li><%= link_to button[:label], button[:url], :class => "smallDialogLink button btn btn-primary", :confirm => button[:confirm], data: { ajax_modal: 'trigger' } %></li>
      <%else%>
        <li><%= link_to button[:label], button[:url], :class => "smallDialogLink button btn btn-primary", :confirm => button[:confirm], data: { ajax_modal: 'trigger' }%></li>
      <%end%>
    <%end%>
  <%end%>
</ul>
